<?xml version="1.0" encoding="utf-8"?>
<resources>


    <style name="AppTheme" parent="AppTheme.Base">

    </style>


    <style name="AppTheme.Base" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/theme_default_primary</item>
        <item name="colorPrimaryDark">@color/theme_default_primary_dark</item>
        <item name="colorAccent">@color/theme_default_accent</item>
    </style>

    <style name="CustomToolbarTheme" parent="ThemeOverlay.AppCompat.ActionBar">
        <item name="android:textColorPrimary">@color/primary_text</item>
        <item name="android:textColorSecondary">@color/secondary_text</item>
    </style>

    <style name="MessageTextView" parent="android:Widget.Holo.TextView">
        <item name="android:background">@color/theme_default_accent</item>
        <item name="android:textColor">@color/light_text</item>
        <item name="android:padding">16dp</item>
        <item name="android:gravity">center</item>
        <item name="android:visibility">invisible</item>
    </style>

    <style name="FormTextView" parent="android:Widget.Holo.TextView">
        <item name="android:textColor">@color/secondary_text</item>
        <item name="android:padding">0dp</item>
        <item name="android:textSize">13sp</item>
        <item name="android:layout_marginTop">0dp</item>
        <item name="android:layout_marginLeft">10dp</item>
        <item name="android:layout_marginRight">8dp</item>
        <item name="android:layout_marginBottom">0dp</item>
    </style>

    <style name="FormEditText" parent="android:Widget.Holo.EditText">
        <item name="android:textColor">@color/primary_text</item>
        <item name="android:layout_marginTop">2dp</item>
        <item name="android:layout_marginLeft">8dp</item>
        <item name="android:layout_marginRight">8dp</item>
        <item name="android:layout_marginBottom">8dp</item>
        <item name="android:singleLine">true</item>
    </style>

    <style name="RecyclerView">
        <item name="android:background">@drawable/recyclerview_background</item>
    </style>

    <style name="CardView">
        <item name="android:background">@drawable/card_background</item>
        <item name="android:padding">0sp</item>
    </style>

    <style name="CardTitleText" parent="android:Widget.Holo.TextView">
        <item name="android:textColor">@color/primary_text</item>
        <item name="android:padding">0dp</item>
        <item name="android:textSize">17sp</item>
        <item name="android:singleLine">true</item>
    </style>

    <style name="CardDescText" parent="android:Widget.Holo.TextView">
        <item name="android:textColor">@color/secondary_text</item>
        <item name="android:padding">0dp</item>
        <item name="android:textSize">12sp</item>
        <item name="android:singleLine">true</item>
    </style>

</resources>