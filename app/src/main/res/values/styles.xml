<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="MessageTextView" parent="android:Widget.TextView">
        <item name="android:background">@color/theme_default_accent</item>
        <item name="android:textColor">@color/light_text</item>
        <item name="android:padding">16dp</item>
        <item name="android:gravity">center</item>
        <item name="android:visibility">invisible</item>
    </style>

    <style name="CustomButton" parent="android:Widget.Button">
        <item name="android:background">@drawable/custom_button_bg</item>
        <item name="android:textColor">@color/light_text</item>
        <item name="android:padding">16dp</item>
        <item name="android:gravity">center</item>
    </style>
</resources>